<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.photon.phresco</groupId>
	<artifactId>EshopTomcat</artifactId>
	<version>1.0.0-SNAPSHOT</version>
    <scm>
        <connection>https://github.com/varunkumar-s/EshopTomcat.git</connection>
        <developerConnection>scm:git:https://github.com/varunkumar-s/EshopTomcat.git</developerConnection>
        <url>scm:git:https://github.com/varunkumar-s/EshopTomcat.git</url>
    </scm>
	<packaging>phresco</packaging>
	<name>EshopTomcat</name>

    <build>
    	<directory>do_not_checkin/target</directory>
		<sourceDirectory>${phresco.source.directory}</sourceDirectory>
        <testSourceDirectory>${testSourceDirectory}</testSourceDirectory>
		<finalName>service</finalName>
		<plugins>
			<plugin>
				<groupId>com.photon.phresco.plugins</groupId>
				<artifactId>phresco-maven-plugin</artifactId>
				<version>3.3.1.16001</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
                <version>1.1</version>
                <configuration>
                    <port>${server.port}</port>
                    <username>${server.username}</username>
                    <password>${server.password}</password>
                    <url>http://${server.host}:${server.port}/manager/html</url>
                    <path>/${project.build.finalName}</path>
                    <argLine>-Xmx512m</argLine>
                    <warFile>${project.basedir}/do_not_checkin/build/temp/${project.build.finalName}.war</warFile>
                    <warSourceDirectory>${phresco.src.root.dir}/main/webapp</warSourceDirectory>
                    <systemProperties>
                        <SERVER_ENVIRONMENT>${server.env}</SERVER_ENVIRONMENT>
					</systemProperties>
                </configuration>
            </plugin>
			<plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <version>1.2.3</version>
                <configuration>
                    <container>
                        <containerId>${container.id}</containerId>
                        <type>remote</type>
					</container>
                    <configuration>
                        <type>runtime</type>
                        <properties>
                            <cargo.protocol>${server.protocol}</cargo.protocol>
                            <cargo.hostname>${server.host}</cargo.hostname>
                            <cargo.servlet.port>${server.port}</cargo.servlet.port>
                            <cargo.remote.username>${server.username}</cargo.remote.username>
                            <cargo.remote.password>${server.password}</cargo.remote.password>
                            <cargo.jvmargs>-Xmx512m</cargo.jvmargs>
						</properties>
					</configuration>
                    <deployables>
                        <deployable>
                            <location>${project.basedir}/do_not_checkin/build/temp/${server.context}.war</location>
                            <type>war</type>
						</deployable>
                   </deployables>
                </configuration>
            </plugin>
			<plugin>
                <groupId>net.awired.jstest</groupId>
                <artifactId>jstest-maven-plugin</artifactId>
                <version>3.3.1.16001</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <runnerType>ALMOND</runnerType>
                    <coverage>true</coverage>
                    <skipTests>${js.skipTest}</skipTests>
                </configuration>
            </plugin>
            <plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-surefire-plugin</artifactId>
			<version>2.16</version>
				<dependencies>
				<dependency>
				<groupId>org.apache.maven.surefire</groupId>
				<artifactId>surefire-junit47</artifactId>
				<version>2.16</version>
				</dependency>
				</dependencies>
	    </plugin>
            <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-install-plugin</artifactId>
            <version>2.4</version>
            <executions>
                <execution>
                    <id>install-war</id>
                    <phase>install</phase>
                    <goals>
                        <goal>install-file</goal>
                    </goals>
                    <configuration>
                            <packaging>war</packaging>
                            <artifactId>${project.artifactId}</artifactId>
                            <groupId>${project.groupId}</groupId>
                            <version>${project.version}</version>
                            <file>${project.build.directory}/${project.build.finalName}.war</file>
                        </configuration>
                </execution>
            </executions>
    </plugin>
		</plugins>
    </build>
	<profiles>
        <profile>
            <id>ci</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
		        <plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<version>2.5</version>
						<executions>
						  <execution>
							<id>default-clean</id>
							<phase>pre-clean</phase>
							<goals>
							  <goal>clean</goal>
							</goals>
						  </execution>
						</executions>
						<configuration>
                            <excludeDefaultDirectories>true</excludeDefaultDirectories>
                            <filesets>
                                <fileset>
                                    <directory>do_not_checkin/build</directory>
                                    <includes>
                                        <include>**/*</include>
							  </includes>
                                    <followSymlinks>false</followSymlinks>
							</fileset>
                                <fileset>
                                    <directory>do_not_checkin/archives</directory>
                                    <includes>
                                        <include>**/*</include>
                                    </includes>
                                    <followSymlinks>false</followSymlinks>
                            </fileset>
						  </filesets>
                        </configuration>
					  </plugin>
		        </plugins>
            </build>
        </profile>
		
		<profile>   
			<id>web</id>
			<properties>
                <sonar.branch>web</sonar.branch>
                <sonar.language>web</sonar.language>
                <sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
                <sonar.source.directory>${phresco.src.root.dir}/main/webapp</sonar.source.directory>
            </properties> 
		</profile>
		
		<profile>   
			<id>java</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			 </activation>
			<properties>
                <sonar.branch>java</sonar.branch>
                <sonar.language>java</sonar.language>
                <phresco.source.directory>${phresco.src.root.dir}/main/java</phresco.source.directory>
                <testSourceDirectory>${phresco.src.root.dir}/test/java</testSourceDirectory>
                <js.skipTest>true</js.skipTest>
            </properties> 
		</profile>
		
		<profile>   
			<id>js</id>
			<properties>
                <sonar.branch>js</sonar.branch>
                <sonar.language>js</sonar.language>
                <phresco.source.directory>${phresco.src.root.dir}/main/webapp/js</phresco.source.directory>
                <testSourceDirectory>${phresco.src.root.dir}/test/webapp/js</testSourceDirectory>
                <sonar.exclusions>**/lib/**</sonar.exclusions>
                <js.skipTest>false</js.skipTest>
            </properties> 
		</profile>
		
		<profile>
            <id>html</id>
             <properties>
                <sonar.language>web</sonar.language>
                <sonar.branch>html</sonar.branch>
                <sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
                <phresco.source.directory>${phresco.src.root.dir}/main/webapp/</phresco.source.directory>
                <sonar.web.fileExtensions>html</sonar.web.fileExtensions>
            </properties>
        </profile>
		</profiles>
    <repositories>
        <repository>
            <id>photon</id>
            <url>http://172.16.17.226:8080/repository/content/groups/public/</url>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>BambooTestProject-release</id>
            <url>http://172.16.17.226:8080/repository/content/repositories/dep-3-2/</url>
        </repository>
        <snapshotRepository>
            <id>BambooTestProject-snapshot</id>
            <url>http://172.16.17.226:8080/repository/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
        <properties>
        <phresco.test.dir>test</phresco.test.dir>
        <phresco.src.root.dir>src</phresco.src.root.dir>
        <source.pom>pom.xml</source.pom>
        <phresco.env.config.xml>/src/main/resources/phresco-env-config.xml</phresco.env.config.xml>
        <phresco.sql.path>/src/sql/</phresco.sql.path>
        <jersey-version>1.9-ea07</jersey-version>
        <phresco.source.resource.dir>/src/main/resources</phresco.source.resource.dir>
        <phresco.unitTest>Java</phresco.unitTest>
        <phresco.manualTest.report.dir>/${phresco.test.dir}/manual</phresco.manualTest.report.dir>
        <phresco.unitTest.java.report.dir>/do_not_checkin/target/surefire-reports</phresco.unitTest.java.report.dir>
        <phresco.unitTest.java.testsuite.xpath>/testsuite</phresco.unitTest.java.testsuite.xpath>
        <phresco.unitTest.java.testcase.path>/testcase</phresco.unitTest.java.testcase.path>
        <phresco.unitTest.js.report.dir>/do_not_checkin/target/jstest/report</phresco.unitTest.js.report.dir>
        <phresco.unitTest.js.testsuite.xpath>/testsuite</phresco.unitTest.js.testsuite.xpath>
        <phresco.unitTest.js.testcase.path>/testcase</phresco.unitTest.js.testcase.path>
        <phresco.functionalTest.selenium.tool>grid</phresco.functionalTest.selenium.tool>
        <phresco.functionalTest.dir>/${phresco.test.dir}/functional</phresco.functionalTest.dir>
        <phresco.functionalTest.report.dir>${project.basedir}/test/functional/target/surefire-reports</phresco.functionalTest.report.dir>
        <phresco.functionalTest.testsuite.xpath>/testsuite</phresco.functionalTest.testsuite.xpath>
        <phresco.functionalTest.testcase.path>/testcase</phresco.functionalTest.testcase.path>
        <phresco.functionalTest.adapt.config>/${phresco.test.dir}/functional/src/main/resources/phresco-env-config.xml</phresco.functionalTest.adapt.config>
        <phresco.performanceTest.dir>/${phresco.test.dir}/performance</phresco.performanceTest.dir>
        <phresco.performanceTest.report.dir>/${phresco.test.dir}/performance/dir_type/results/jmeter</phresco.performanceTest.report.dir>
        <phresco.performanceTest.result.extension>jtl</phresco.performanceTest.result.extension>
        <phresco.performanceTest.jmx.upload.dir>/tests</phresco.performanceTest.jmx.upload.dir>
        <phresco.loadTest.dir>/${phresco.test.dir}/load</phresco.loadTest.dir>
        <phresco.loadTest.report.dir>/${phresco.test.dir}/load/dir_type/results/jmeter</phresco.loadTest.report.dir>
        <phresco.loadTest.jmx.upload.dir>/tests</phresco.loadTest.jmx.upload.dir>
        <phresco.loadTest.result.extension>jtl</phresco.loadTest.result.extension>
        <phresco.eclipse>true</phresco.eclipse>
        <phresco.componentTest.dir>/${phresco.test.dir}/component</phresco.componentTest.dir>
        <phresco.componentTest.report.dir>/${phresco.test.dir}/component/target/surefire-reports</phresco.componentTest.report.dir>
        <phresco.componentTest.testsuite.xpath>/testsuite</phresco.componentTest.testsuite.xpath>
        <phresco.componentTest.testcase.path>/testcase</phresco.componentTest.testcase.path>
        <phresco.componentTest.adapt.config>/${phresco.test.dir}/component/src/main/resources/phresco-env-config.xml</phresco.componentTest.adapt.config>
        <phresco.src.repo.url>https://github.com/varunkumar-s/EshopTomcat.git</phresco.src.repo.url>
    </properties>

</project>
